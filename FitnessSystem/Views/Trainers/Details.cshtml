@model FitnessSystem.Models.Trainer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trainer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specialization)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialization)
        </dd>

        <dt class="col-sm-2">
            Certificate
        </dt>
        <dd class="col-sm-10">
            @* Перевірка, чи є сертифікат *@
            @if (!string.IsNullOrEmpty(Model.Certificates))
            {
                <img src="@Model.Certificates" alt="Trainer Certificate" style="max-width: 300px;" />
            }
            else
            {
                <p>No certificate available.</p>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.TrainerID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>