@model IEnumerable<FitnessSystem.Models.Trainer>

@{
    ViewData["Title"] = "List of trainers";
}

<h1>List of trainers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certificates)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certificates)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrainerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TrainerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TrainerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
