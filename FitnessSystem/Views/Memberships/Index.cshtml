@model IEnumerable<FitnessSystem.Models.Membership>

@{
    ViewData["Title"] = "List of subscriptions";
}

<h1>List of subscriptions</h1>
<link rel="stylesheet" href="~/css/site.css" />
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.ClientID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MembershipID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MembershipID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MembershipID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
